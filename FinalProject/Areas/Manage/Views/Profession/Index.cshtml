@model List<Profession>
@{
    int count = 0;
}
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <a asp-controller="Profession" asp-action="create" class="btn btn-success">Create Profession</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Num
                                    </th>
                                    <th>
                                        Icon
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Profession profession in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            @count
                                        </td>
                                        <td>
                                            <img src="~/assets/img/@profession.Image" />
                                        </td>
                                        <td>
                                            @profession.Name
                                        </td>

                                        <td>
                                            @profession.Description
                                        </td>

                                        <td>
                                            <a asp-controller="Profession" asp-action="Update" asp-route-id="@profession.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                            <a asp-controller="Profession" asp-action="Delete" asp-route-id="@profession.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                            <a asp-controller="Profession" asp-action="Detail" asp-route-id="@profession.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>